{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "@types/jest"],
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/__tests__/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
